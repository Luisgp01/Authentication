<div class="mt-4 row justify-content-center">
  <div class="col-4">
    <h1 class="text-center mt-4">Login</h1>
    <form autocomplete="off" class="mt-4" method="POST" action="/login">
      <div class="form-group mb-4">
        <label for="exampleInputEmail1">Email</label>
        <input value="{{user.email}}" name="email" type="email"
          class="form-control {{#if errors.email}}is-invalid{{/if}}" placeholder="Enter name">
        {{#if errors.email}}
        <small class="invalid-feedback">
          {{errors.email}}
        </small>
        {{/if}}
      </div>
      <div class="form-group mb-4">
        <label for="exampleInputPassword1">Password</label>
        <input name="password" type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}"
          placeholder="Password">
        {{#if errors.password}}
        <small class="invalid-feedback">
          {{errors.password}}
        </small>
        {{/if}}
      </div>
      <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary fa fa-envelope mb-2"> Login with email</button>
    </form>
    <div class="mb-4 d-grid gap-2">
      <a href="/login/google" class="btn btn-danger border-0">
        <i class="fa fa-google"> Login with Google</i>
      </a>
    </div>
  </div>
        <a href="/register" class="link-primary">Is this your first time? Create an account here</a>
</div>
</div>
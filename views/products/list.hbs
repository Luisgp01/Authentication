<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Products</li>
    </ol>
</nav>

<div class="container">
    <div class="row mx-auto">
        {{#each products as |product|}}
        <div class="col-xl-3 col-sm-6 col-xs-12 gy-4 d-flex align-items-stretch">
            <div class="card w-100 " style="width: 18rem;">
                <div class="position-relative">
                    <img src="{{product.main_image}}" class="card-img-top" alt="...">
                    <button class="like-button border-0">
                        <i data-id="{{product.id}}" class="
                                      like-action fa fa-heart
                                      {{#userLikedProducts likes=../likes product=product}} icon-liked{{/userLikedProducts}} ">
                        </i>
                    </button>
                </div>
                <div class="card-body d-flex flex-column mt-2 justify-content-between">
                    <div>
                        <h6 class="card-title py-1">{{product.title}}</h6>
                        <small class="card-text text-muted text-small">{{product.fashion_product_type}}</small>
                        <h5 class="card-title mb-4 mt-2">{{product.RSVP}} â‚¬</h5>
                    </div>
                    <a href="/products/detail/{{product._id}}" class="btn btn btn-outline-primary">Detalle</a>
                </div>
            </div>
        </div>
        {{/each}}
        <div class="mt-4">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                <li class="page-item {{compare page 1 "disabled"}}"><a class="page-link" href="/products/{{add page -1}}/?category={{../category}}">Previous</a></li>

                    {{#times pagesCount}}
                    <li class="page-item {{compare ../page this "active"}}"><a class="page-link" href="/products/{{this}}/?category={{../category}}">{{this}}</a></li>
                    {{/times}}
                    <li class="page-item  {{compare page pagesCount "disabled"}}"><a class="page-link" href="/products/{{add page 1}}/?category={{../category}}">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/axios.js"></script>